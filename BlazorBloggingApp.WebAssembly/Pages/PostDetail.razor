@page "/post/{PostId:int}"
@using BlazorBloggingApp.WebAssembly.Models
@using BlazorBloggingApp.WebAssembly.Services
@using static BlazorBloggingApp.WebAssembly.Layout.BlogList

@code {
    [Parameter]
    public int PostId { get; set; }

    private BlogPost? post;

    [Inject]
    public IBlogPostService BlogPostService { get; set; } = default!;

    [Inject]
    public NavigationManager NavigationManager { get; set; } = default!;

    protected override void OnInitialized()
    {
        // This is a simplified example. In a real application, you might fetch the post from a service.
        post = BlogPostService.GetPostById(PostId);
    }

    protected override async Task OnParametersSetAsync()
    {
        post = await BlogPostService.GetPostByIdAsync(PostId);
    }

    void EditPost()
    {
        NavigationManager.NavigateTo($"/edit-post/{PostId}");
    }
}

@if (post is not null)
{
    <h2>@post.Title</h2>
    <p>@post.Content</p>
    <button @onclick="EditPost">Edit</button>
}
else
{
    <p>Post not found.</p>
}